#background-overlay {
	position: fixed;
	background: url(<%= asset_path "mattbackground.jpg"%>) no-repeat fixed;
	background-position: 70% center;
	background-size: cover;
	min-height: 100vh;
	width: 100%;
	z-index: -101;
}

li {
	font-size:1.25em;
}

video#bgvideo { 
    position: fixed;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    z-index: -100;
    -ms-transform: translateX(-50%) translateY(-50%);
    -moz-transform: translateX(-50%) translateY(-50%);
    -webkit-transform: translateX(-50%) translateY(-50%);
    transform: translateX(-50%) translateY(-50%);
    background: url(<%= asset_path "videobackground.png"%>) no-repeat;
    background-size: cover; 
}